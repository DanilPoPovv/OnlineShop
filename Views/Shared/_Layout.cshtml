<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <ul class="navbar-nav">
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <span class="nav-link">Welcome, @User.Identity.Name</span>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Authentication" asp-action="Logout">Logout</a>
            </li>
        }
    </ul>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Shop">Shops Management</a></li>
                </ul>
            </div>
            <a class="btn btn-outline-danger" href="/Authentication/Logout">Logout</a>
            <div>
                <a class="btn btn-outline-danger" href="/Authentication/Login">Login</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()

        <script src="~/js/site.js" defer></script>
        @RenderSection("Scripts", required: false)
    </div>

    <footer class="bg-dark text-center text-white py-3 mt-5">
        <p>&copy; 2025 - Shop Management</p>
    </footer>

</body>
</html>
