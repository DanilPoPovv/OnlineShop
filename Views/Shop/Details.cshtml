@{
    Layout = "_Layout";
    ViewData["Title"] = "Shop Details";
}

<h1>Shop: @Model.Shop.Name</h1>
<h3>Manager: @Model.Shop.Manager.Name</h3>

<div class="row">
    <div class="col-md-6">
        <h2>Users in this Shop</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h2>Products in this Shop</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Quantity</td>
                        <td>$@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
